---
layout: layouts/base.hbs
title: "Store"
product:
  name: "Be My Valentine"
  price: "$25"
  images:
    - thumbnail: "/assets/images/heart-thumb1.jpg"
      full:      "/assets/images/heart-full1.jpg"
      alt:       "Valentine shot 1"
    - thumbnail: "/assets/images/heart-thumb2.jpg"
      full:      "/assets/images/heart-full2.jpg"
      alt:       "Valentine shot 2"
    - thumbnail: "/assets/images/heart-thumb3.jpg"
      full:      "/assets/images/heart-full3.jpg"
      alt:       "Valentine shot 3"
stripeLink: "https://buy.stripe.com/test_8x2bIUfvUdC9c7meUY2Ji00"
---

<section class="max-w-4xl mx-auto p-8">
  <h1 class="text-2xl font-display font-bold mb-4"><span
      class="text-blue uppercase"
    >{{title}}: </span>
    {{product.name}}</h1>
  <p>32 pages. 3 page essay. 26 photographs printed on 190 GSM paper.<br />

    Limited run of 20 books.</p>
  <p class="mb-6 pt-3 text-blue font-bold text-lg">{{product.price}}</p>

  <div class="flex flex-col md:flex-row items-start gap-8">
    <!-- Main preview -->
    <div class="w-full md:w-3/4">
      {{#with (lookup product.images 0) as |img|}}
  <img
    id="product-main"
    src="{{ url img.full }}"
    alt="{{img.alt}}"
    class="w-full h-auto rounded shadow"
  />
{{/with}}
    </div>

    <!-- Thumbnails -->
    <div
      id="product-thumbs"
      class="flex flex-row md:flex-col w-full md:w-1/4 space-x-4 md:space-x-0 md:space-y-4 overflow-x-auto md:overflow-y-auto"
    >
      {{#each product.images}}
  <img
    class="thumb flex-shrink-0 w-20 h-20 object-cover rounded cursor-pointer border-4 border-transparent"
    src="{{ url this.thumbnail }}"
    data-full="{{ url this.full }}"
    data-alt="{{this.alt}}"
    alt="{{this.alt}}"
  />
{{/each}}
    </div>
  </div>

  <div class="mt-6">
    <a
      href="{{stripeLink}}"
      class="inline-block text-white px-4 py-2 rounded"
      style="background-color: #5EC5F3;"
      target="_blank"
      rel="noopener"
    >
      Buy on Stripe
    </a>
  </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function () {
  var mainImg = document.getElementById('product-main');
  var thumbs = document.querySelectorAll('#product-thumbs .thumb');
  if (!mainImg || !thumbs.length) return;

  thumbs[0].classList.add('active');

  thumbs.forEach(function (thumb) {
    thumb.addEventListener('click', function () {
      mainImg.src = thumb.getAttribute('data-full');
      mainImg.alt = thumb.getAttribute('data-alt');

      thumbs.forEach(function (t) { t.classList.remove('active'); });
      thumb.classList.add('active');
    });
  });
});
</script>
