<header class="relative text-gray-100 z-20 md:pb-7 pb:3">
  <div class="max-w-6xl mx-auto flex items-center justify-between p-4">
    <!-- Logo / Brand -->
    <div class="uppercase"><a href="{{url '/'}}" class="font-display font-normal"><span
          class="tracking-wider"
        >David Comdico</span>
        <br />
        <span
          class="font-bold text-lg -mt-2 block text-blue"
        >Photography</span></a></div>

    <!-- Hamburger (mobile only) -->
    <button
      id="menu-toggle"
      class="md:hidden p-2 focus:outline-none"
      aria-label="Toggle menu"
    >
      <svg
        class="w-6 h-6"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"
        />
      </svg>
    </button>

    <!-- Navigation -->
    <nav
      id="mobile-menu"
      class="absolute bg-gray-800 font-display text-base top-12 md:top-full w-[160px] md:w-[65%] right-0 md:static md:block hidden"
    >
      <ul class="flex flex-col md:flex-row md:space-x-1 uppercase">
        <li>
          <a href="{{url '/'}}" class="block px-4 py-2 md:hover:bg-blue">Home</a>
        </li>
        <li class="relative ">
          <!-- Gallery toggle -->
          <button
            id="gallery-toggle"
            class="w-full uppercase text-left px-4 py-2 md:hover:bg-blue flex items-center"
          >
            Gallery
            <svg
              class="w-4 h-4 ml-2 transform md:inline"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 9l-7 7-7-7"
              />
            </svg>
          </button>
          <!-- Dropdown -->
          <ul
            id="gallery-menu"
            class="hidden md:absolute md:mt-2 md:bg-gray-900 md:shadow-lg md:rounded z-10"
          >
            <li>
              <a
                href="{{url '/gallery/street/'}}"
                class="block text-sm px-4 py-2 ml-2 md:ml-0 md:hover:bg-blue"
              >
                Street
              </a>
            </li>
            <li>
              <a
                href="{{url '/gallery/my-rolleiflex/'}}"
                class="block px-4 py-2 text-sm ml-2 md:ml-0 md:hover:bg-blue"
              >
                My Rolleiflex
              </a>
            </li>
            <li>
              <a
                href="{{url '/gallery/portraits/'}}"
                class="block px-4 py-2 text-sm ml-2 md:ml-0 md:hover:bg-blue"
              >
                Portraits
              </a>
            </li>
          </ul>
        </li>
        <li>
          <a href="{{url '/store/'}}" class="block px-4 py-2 md:hover:bg-blue">Store</a>
        </li>
        <li>
          <a href="{{url '/about/'}}" class="block px-4 py-2 md:hover:bg-blue">About</a>
        </li>
        <li>
          <a
