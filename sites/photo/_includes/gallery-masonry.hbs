<div class="gallery columns-2 md:columns-3 gap-4 p-4">
  {{#each images}}
    <div class="break-inside-avoid mb-4">
      <img
        src="{{url this.thumbnail}}"
        data-full="{{url this.full}}"
        alt="{{this.alt}}"
        class="w-full rounded cursor-pointer"
      />
    </div>
  {{/each}}
</div>

<!-- Lightbox overlay -->
<div
  id="lightbox"
  class="fixed inset-0 bg-black bg-opacity-80 hidden flex items-center justify-center p-4 z-50"
>
  <img
    id="lightbox-img"
    src=""
    alt=""
    class="max-h-full max-w-full rounded cursor-pointer"
  />
</div>
